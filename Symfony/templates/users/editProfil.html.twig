{% extends 'base.html.twig' %}
{% block title %}Profil{% endblock %}
{% block body %}
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span> </span></div>
        </div>
        <div class="col-md-7 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profil de {{ app.user.firstname }} {{ app.user.name }}</h4>
                </div>
                {{ form_start(form) }}
                <div class="row mt-2">
                    <div class="col-md-6">{{ form_label(form.name, 'Prenom :', { 'attr': {'class': 'labels'} }) }}{{ form_widget(form.name) }}</div>
                    <div class="col-md-6">{{ form_label(form.firstname, 'Nom :', { 'attr': {'class': 'labels'} }) }}{{ form_widget(form.firstname) }}</div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">{{ form_label(form.phone, 'Téléphone :', { 'attr': {'class': 'labels'} }) }}{{ form_widget(form.phone) }}</div>
                    <div class="col-md-12">{{ form_label(form.adressLine1, 'Adresse :', { 'attr': {'class': 'labels'} }) }}{{ form_widget(form.adressLine1) }}</div>
                    <div class="col-md-12">{{ form_label(form.adressLine2, "Complément d'adresse :", { 'attr': {'class': 'labels'} }) }}{{ form_widget(form.adressLine2) }}</div>
                    <div class="col-md-12">{{ form_label(form.postcode, 'Code postal :', { 'attr': {'class': 'labels'} }) }}{{ form_widget(form.postcode) }}</div>
                    <div class="col-md-12">{{ form_label(form.email, 'E-mail :', { 'attr': {'class': 'labels'} }) }}{{ form_widget(form.email) }}</div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">{{ form_label(form.country, 'Pays :', { 'attr': {'class': 'labels'} }) }}{{ form_widget(form.country) }}</div>
                </div>
                <div class="mt-5 text-center">{{ form_row(form.Valider, { 'label': 'Sauvegarder' }) }}</div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
</div>
</div>
{% endblock %}